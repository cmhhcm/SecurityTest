<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmh.eurekaclient2.mapper.BookMapper">


    <resultMap id="BaseResultMap" type="com.cmh.eurekaclient2.vo.BookVO">
        <result column="ID" property="id" javaType="INTEGER"/>
        <result column="NAME" property="name" jdbcType="VARCHAR"/>
        <result column="STATUS" property="status" jdbcType="INTEGER"/>
        <result column="CREATED_BY" property="createdUser" jdbcType="VARCHAR"/>
        <result column="CREATED_TIME" property="createdTime" jdbcType="TIMESTAMP"/>
        <result column="UPDATED_BY" property="updatedUser" jdbcType="VARCHAR"/>
        <result column="UPDATED_TIME" property="updatedTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert" parameterType="com.cmh.eurekaclient2.vo.BookVO">
        insert into curd_test
            (name, status, created_by)
        values (#{name}, #{status}, #{createdUser})
    </insert>

    <update id="update" parameterType="com.cmh.eurekaclient2.vo.BookVO">
        update
            curd_test
        set name       = #{name},
            status     = #{status},
            created_by = #{createdUser}
            where id = #{id}
    </update>

    <delete id="del" parameterType="java.lang.Integer">
        delete
        from curd_test
        where id = #{id}
    </delete>

    <select id="getById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select id,
               name,
               status,
               created_by,
               created_time,
               updated_by,
               updated_time
        from curd_test
        where id = #{id,jdbcType=VARCHAR}
    </select>

    <select id="getBooks" parameterType="com.cmh.eurekaclient2.value.BookQueryCondition" resultMap="BaseResultMap">
        select id,
        name,
        status,
        created_by,
        created_time,
        updated_by,
        updated_time
        from curd_test
        where 1=1
        <if test="name != null and name != ''">
            and name = #{name}
        </if>
        <if test="ids != null and ids.size()>0">
            and id in
            <foreach collection="ids" item="item" index="index" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </if>

    </select>
</mapper>